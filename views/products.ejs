<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Produits</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

<nav>
  <a href="/">Accueil</a>
  <a href="/products">Produits</a>
  <a href="/products/logout">Déconnexion</a>
</nav>

<div class="container">
  <h1>Produits</h1>

  <a href="/products/add">➕ Ajouter un produit</a>

  <ul>
    <% products.forEach(p => { %>
      <li>
        <%= p.name %>
        <a href="/products/edit/<%= p.id %>">✏️</a>
        <a href="/products/delete/<%= p.id %>" onclick="return confirm('Supprimer ?')">❌</a>
      </li>
    <% }) %>
  </ul>

  <a href="/">⬅ Retour</a>
</div>

</body>
</html>
